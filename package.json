{
  "name": "pokeref",
  "description": "A Pokemon encyclopedia",
  "version": "1.0.0",
  "private": true,
  "author": "Thibaud Brault",
  "license": "MIT",
  "keywords": [
    "nextjs",
    "starter",
    "typescript"
  ],
  "scripts": {
    "dev": "next dev -p 3005",
    "build": "prisma generate && next build",
    "start": "next start",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "postbuild": "next-sitemap",
    "type": "tsc --noEmit",
    "lint": "eslint --ignore-path .gitignore \"src/**/*.+(ts|js|tsx)\"",
    "lint:fix": "eslint --ignore-path .gitignore \"src/**/*.+(ts|js|tsx)\" --fix",
    "format": "prettier --ignore-path .gitignore \"src/**/*.+(ts|js|tsx)\"",
    "format:fix": "prettier --ignore-path .gitignore \"src/**/*.+(ts|js|tsx)\" --write",
    "style": "stylelint \"src/**/*.scss\"",
    "style:fix": "stylelint \"src/**/*.scss\" --fix",
    "postinstall": "husky install"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  },
  "dependencies": {
    "@auth/prisma-adapter": "1.0.1",
    "@hookform/resolvers": "3.1.1",
    "@meronex/icons": "4.0.0",
    "@prisma/client": "5.0.0",
    "@radix-ui/react-label": "2.0.2",
    "@radix-ui/react-navigation-menu": "1.1.3",
    "@radix-ui/react-separator": "1.0.3",
    "@radix-ui/react-slot": "1.0.2",
    "@radix-ui/react-tabs": "1.0.4",
    "@tanstack/match-sorter-utils": "8.7.6",
    "@tanstack/react-query": "4.29.7",
    "@tanstack/react-query-devtools": "4.29.7",
    "@tanstack/react-table": "8.7.9",
    "axios": "^1.4.0",
    "class-variance-authority": "0.6.1",
    "fuse.js": "6.6.2",
    "hamburger-react": "2.5.0",
    "next": "13.4.3",
    "next-auth": "4.22.1",
    "next-pwa": "5.6.0",
    "next-sitemap": "4.1.3",
    "nextjs-progressbar": "0.0.16",
    "react": "18.2.0",
    "react-circular-progressbar": "2.1.0",
    "react-dom": "18.2.0",
    "react-error-boundary": "4.0.10",
    "react-hook-form": "7.43.9",
    "react-hot-toast": "2.4.0",
    "react-modal": "3.16.1",
    "react-paginate": "8.1.4",
    "react-select": "5.7.0",
    "react-tooltip": "5.13.1",
    "react-virtual": "2.10.4",
    "sass": "1.63.4",
    "yup": "1.2.0"
  },
  "devDependencies": {
    "@playwright/test": "1.31.2",
    "@tanstack/eslint-plugin-query": "4.29.4",
    "@types/node": "20.3.1",
    "@types/react": "18.0.25",
    "@types/react-dom": "18.0.9",
    "@types/react-modal": "3.13.1",
    "@typescript-eslint/eslint-plugin": "6.0.0",
    "@typescript-eslint/parser": "6.0.0",
    "eslint": "8.27.0",
    "eslint-config-next": "13.0.3",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "3.5.2",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-prettier": "5.0.0",
    "husky": "8.0.2",
    "lint-staged": "13.2.2",
    "prettier": "3.0.0",
    "prisma": "5.0.0",
    "stylelint": "15.9.0",
    "stylelint-config-prettier-scss": "1.0.0",
    "stylelint-config-standard-scss": "10.0.0",
    "ts-node": "10.9.1",
    "typescript": "5.1.3"
  },
  "lint-staged": {
    "./src/**/*.{ts,js,jsx,tsx}": [
      "pnpm lint:fix",
      "pnpm format:fix"
    ],
    "./src/**/*.scss": [
      "pnpm style:fix"
    ]
  }
}
