{
  "name": "pokeref",
  "description": "A Pokemon encyclopedia",
  "version": "1.0.0",
  "private": true,
  "author": "Thibaud Brault",
  "license": "MIT",
  "keywords": [
    "nextjs",
    "starter",
    "typescript"
  ],
  "scripts": {
    "dev": "next dev -p 3005",
    "dev:railway": "railway run pnpm dev",
    "build": "pnpm migrate:deploy && next build",
    "start": "next start",
    "migrate:dev": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "migrate:status": "prisma migrate status",
    "generate": "prisma generate",
    "push": "prisma db push",
    "format": "prisma format",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "postbuild": "next-sitemap",
    "type": "tsc --noEmit",
    "lint": "eslint --ignore-path .gitignore \"src/**/*.+(ts|js|tsx)\"",
    "lint:fix": "eslint --ignore-path .gitignore \"src/**/*.+(ts|js|tsx)\" --fix",
    "prettier": "prettier --ignore-path .gitignore \"src/**/*.+(ts|js|tsx)\"",
    "prettier:write": "prettier --ignore-path .gitignore \"src/**/*.+(ts|js|tsx)\" --write",
    "style": "stylelint \"src/**/*.scss\"",
    "style:fix": "stylelint \"src/**/*.scss\" --fix",
    "postinstall": "prisma generate && husky install"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  },
  "dependencies": {
    "@hookform/resolvers": "3.1.1",
    "@meronex/icons": "4.0.0",
    "@next-auth/prisma-adapter": "1.0.7",
    "@prisma/client": "5.5.2",
    "@radix-ui/react-label": "2.0.2",
    "@radix-ui/react-menubar": "1.0.3",
    "@radix-ui/react-navigation-menu": "1.1.4",
    "@radix-ui/react-separator": "1.0.3",
    "@radix-ui/react-slot": "1.0.2",
    "@radix-ui/react-tabs": "1.0.4",
    "@tanstack/match-sorter-utils": "8.7.6",
    "@tanstack/react-query": "4.29.7",
    "@tanstack/react-table": "8.10.3",
    "axios": "^1.4.0",
    "class-variance-authority": "0.7.0",
    "fuse.js": "7.0.0",
    "hamburger-react": "2.5.0",
    "next": "13.4.19",
    "next-auth": "4.24.4",
    "next-pwa": "5.6.0",
    "next-sitemap": "4.1.3",
    "nextjs-progressbar": "0.0.16",
    "react": "18.2.0",
    "react-circular-progressbar": "2.1.0",
    "react-dom": "18.2.0",
    "react-error-boundary": "4.0.11",
    "react-hook-form": "7.43.9",
    "react-hot-toast": "2.4.0",
    "react-loader-spinner": "5.3.4",
    "react-modal": "3.16.1",
    "react-paginate": "8.1.4",
    "react-select": "5.7.0",
    "react-tooltip": "5.13.1",
    "react-virtual": "2.10.4",
    "uuid": "9.0.0",
    "vaul": "0.7.7",
    "zod": "3.22.2"
  },
  "devDependencies": {
    "@playwright/test": "1.31.2",
    "@tanstack/eslint-plugin-query": "4.29.4",
    "@types/node": "20.3.1",
    "@types/react": "18.2.34",
    "@types/react-dom": "18.2.14",
    "@types/react-modal": "3.16.0",
    "@types/uuid": "9.0.2",
    "@typescript-eslint/eslint-plugin": "6.7.4",
    "@typescript-eslint/parser": "6.8.0",
    "eslint": "8.27.0",
    "eslint-config-next": "14.0.1",
    "eslint-config-prettier": "9.0.0",
    "eslint-import-resolver-typescript": "3.5.2",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-prettier": "5.0.0",
    "husky": "8.0.2",
    "lint-staged": "15.0.2",
    "prettier": "3.0.0",
    "prisma": "5.5.2",
    "sass": "1.68.0",
    "stylelint": "15.11.0",
    "stylelint-config-prettier-scss": "1.0.0",
    "stylelint-config-standard-scss": "11.1.0",
    "ts-node": "10.9.1",
    "typescript": "5.1.3"
  },
  "lint-staged": {
    "./src/**/*.{ts,js,jsx,tsx}": [
      "pnpm lint:fix",
      "pnpm prettier:write"
    ],
    "./src/**/*.scss": [
      "pnpm style:fix"
    ],
    "./prisma/schema.prisma": [
      "pnpm dlx prisma validate",
      "pnpm dlx prisma format"
    ]
  }
}
